@model OrderViewModel

<h1>Create</h1>
<hr />

<div class="row">
    <div class="col-6">

        <div class="card">

            <div class="card-header">
                <h5>Create a new dog</h5>
            </div>

            <div class="card-body">
                <form asp-controller="Order" asp-action="CreateOrder" method="post">

                    <div class="mb-3">
                        <label asp-for="SenderCity" class="form-label"></label>
                        <input asp-for="SenderCity" class="form-control"/>
                        <span asp-validation-for="SenderCity"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="SenderAddress" class="form-label"></label>
                        <input asp-for="SenderAddress" class="form-control" />
                        <span asp-validation-for="SenderAddress"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RecepientCity" class="form-label"></label>
                        <input asp-for="RecepientCity" class="form-control" />
                        <span asp-validation-for="RecepientCity"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="RecepientAddress" class="form-label"></label>
                        <input asp-for="RecepientAddress" class="form-control" />
                        <span asp-validation-for="RecepientAddress"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Wheight" class="form-label"></label>
                        <input asp-for="Wheight" class="form-control" />
                        <span asp-validation-for="Wheight"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PickupDate" class="form-label"></label>
                        <input asp-for="PickupDate" asp-format="{0:dd-MM-yyyy}" class="form-control" />
                        <span asp-validation-for="PickupDate"></span>
                    </div>
                    

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>

                </form>
            </div>

            <div class="card-footer">
            </div>
        </div>





    </div>
</div>